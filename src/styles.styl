html, body
    margin 0
    padding 0

input
    display block
    margin-bottom 16px
    border none
    border-bottom 2px solid white
    padding 8px 0
    background none
    color white
    font-size 14px

    &.wide
        width: 100%;

h2 
    color white

::placeholder
    color white

button
    font-size 16px
    cursor pointer
    border none
    background none
    padding 12px 24px
    border-radius 8px
    font-weight bold
    color white
    
    &.raised
        box-shadow 0 4px 4px rgba(0, 0, 0, 0.25)

        &.colored
            background #aa00aa
            color white

    &:hover
        background #ffffff20

.card
    background none
    border 2px solid white
    border-radius 16px
    padding 32px
    box-shadow 0 8px 8px rgba(0, 0, 0, 0.25)

.actions
    margin-top 24px
    text-align right
